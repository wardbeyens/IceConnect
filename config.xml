<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wabyte.IceConnect" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IceConnect</name>
    <description>
        A simple App that connects people based on their passed location.
    </description>
    <author email="wardbeyens99@gmail.com" href="http://IceConnect.wabyte.com">
        Ward Beyens
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <engine name="browser" spec="^6.0.0" />
    <engine name="android" spec="^8.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
