<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wabyte.iceconnect" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IceConnect</name>
    <description>
        A simple App that connects people based on their passed location.
    </description>
    <author email="wardbeyens99@gmail.com" href="http://iceconnect.wabyte.com">
        Ward Beyens
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreenDuration" value="500" />
    <preference name="AutoHideSplashScreen" value="true" />
</widget>
